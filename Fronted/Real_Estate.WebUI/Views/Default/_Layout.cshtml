@{
	Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("_LayoutHeaderPartialComponent")
<body>
	<div class="wrapper">
		@await Component.InvokeAsync("_LayoutNavbarComponentPartial")
		@if (User.IsInRole("User"))
		{
			@await Component.InvokeAsync("_LayoutSidebarUserComponentPartial")
		}
		@if (User.IsInRole("Admin"))
		{
			@await Component.InvokeAsync("_LayoutSidebarAdminComponentPartial")
		}


		<div class="main-panel">

			@RenderBody()

			@await Component.InvokeAsync("_LayoutFooterComponentPartial")
		</div>
	</div>
	@await Component.InvokeAsync("_LayoutScriptComponentPartial")
</body>
</html>

