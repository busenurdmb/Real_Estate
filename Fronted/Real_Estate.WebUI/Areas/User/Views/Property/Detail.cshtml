@model ResultPropertyDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Default/_Layout.cshtml";
}

<div class="content">
<h4 class="page-title">İlan İşlemleri</h4>
<div class="row">
    <div class="col-12">
        <!-- Tüm ekran boyutları için tam genişlik -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">İlan Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    İlan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                </div>

                <h2>@Model.Title</h2>
                <div style="width: 100%; max-width: 300px; height: 300px; overflow: hidden;">
                    <img src="@Model.Image" style="width: 100%; height: 100%; object-fit: cover;" alt="İlan Resmi" />
                </div>


                <p><strong>Açıklama:</strong> @Model.Description</p>
                <p><strong>Fiyat:</strong> @Model.Price</p>
                <p><strong>Durum:</strong> @Model.Status</p>
                <a href="/Property/AddToFavorites/@Model.Id" class="btn btn-outline-secondary">Favorilere Ekle</a>
            </div>
        </div>
    </div>
</div>
</div>