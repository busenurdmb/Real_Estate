@model List<ResultPropertyDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Default/_Layout.cshtml";
}
<div class="content">
    <h4 class="page-title">İlan İşlemleri</h4>
    <div class="row">
        <div class="col-12">
            <!-- Tüm ekran boyutları için tam genişlik -->
            <div class="card">
                <div class="card-header">
                    <div class="card-title">İlan Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        İlan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                    </div>

                    <!-- Tabloyu mobil cihazlarda kaydırılabilir hale getirmek için table-responsive kullanıyoruz -->
                    <div class="table-responsive">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string color = "";
                                    if (item.Status == "Onay Bekliyor")
                                    {
                                        color = "badge badge-info";
                                    }
                                    else if (item.Status == "Onaylanmış")
                                    {
                                        color = "badge badge-primary";
                                    }
                                    else if (item.Status == "İptal Edildi")
                                    {
                                        color = "badge badge-dark";
                                    }

                                    <tr>
                                        <td>
                                            <img src="@item.Image" style="width: 100px; height: 100px;" />
                                        </td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price</td>
                                        <td class="text-center">
                                            <span class="@color">@item.Status</span>
                                        </td>
                                        <td class="text-center">
                                            <a href="/User/Property/RemoveProperty/@item.Id" class="btn btn-danger btn-sm">
                                                <i class="la la-trash-o"></i> Sil
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a href="/User/Property/UpdateProperty/@item.Id" class="btn btn-success btn-sm">
                                                <i class="la la-edit"></i> Güncelle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- table-responsive sonu -->

                    <a href="/User/Property/CreateProperty/" class="btn btn-outline-primary mt-3">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        border-radius: 0.25rem;
        display: inline-block;
    }

    .btn {
        margin: 0;
        padding: 0.375rem 0.75rem;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
    }

    .text-center {
        text-align: center;
    }

    .table td, .table th {
        vertical-align: middle;
        padding: 0.75rem;
    }

    .table img {
        max-width: 100%;
        height: auto;
    }

    .badge-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .badge-primary {
        background-color: #007bff;
        color: #fff;
    }

    .badge-dark {
        background-color: #343a40;
        color: #fff;
    }
</style>
